@{
    Layout = null;
}



<section class="content ">
    <div class="panel panel-solid">
        <div class="panel-body" data-ng-init="onInit()">
            <h2 class="page-header">List of Employees</h2>
            <div class="row margin">
                

            </div>
            <!--Prompt Message after save-->
            <div class="callout callout-info" ng-show="msgOK">
                <h4><span class="rjg-check-1"></span> Success</h4>
                <p><strong>User details and right's successfully update. </strong>  </p>
            </div>
            <div class="callout callout-danger" ng-show="msgInvalid">
                <h4><span class="rjg-cancel"></span> Invalid</h4>
                <p>{{errorMsg}}</p>
            </div>
            <!--End Prompt Message-->

            <div data-ng-repeat="x in pafMaster" data-ng-show="onViewDetails(x.pmsEmployeeDtl)">
                <h3>{{onType(x.pmsLstType)}}</h3>
                <table class="table table-condensed table-hover" ng-if="x.pmsLstType==1">
                    <tr>
                        <th></th>
                        <th>Employee ID</th>
                        <th>Employee Name</th>
                        <th>Department</th>
                        <th>Position</th>
                    </tr>
                    <tr data-ng-repeat="xx in x.pmsEmployeeDtl">
                        <td>
                            <a class="pointer" data-ng-show="hasOpen(xx)" data-ng-click="onClose(xx.empId)">Open</a>
                            <span data-ng-show="!hasOpen(xx)">N/A</span>
                        </td>
                        <td>{{xx.empId}}</td>
                        <td>{{xx.empName}}</td>
                        <td>{{xx.department}}</td>
                        <td>{{xx.position}}</td>
                    </tr>
                </table>
                <!-- pmsLstType=2-->
                <table class="table table-condensed table-hover" ng-if="x.pmsLstType==2">
                    <tr>
                        <th></th>
                        <th>Employee ID</th>
                        <th>Employee Name</th>
                        <th>Department</th>
                        <th>Position</th>
                    </tr>
                    <tr data-ng-repeat="xx in x.pmsEmployeeDtl  | filter:search:strict">
                        <td>
                            <a class="pointer" data-ng-show="hasOpen(xx)" data-ng-click="onClose(xx.empId)">Open</a>
                            <span data-ng-show="!hasOpen(xx)">N/A</span>
                        </td>
                        <td>{{xx.empId}}</td>
                        <td>{{xx.empName}}</td>
                        <td>{{xx.department}}</td>
                        <td>{{xx.position}}</td>
                    </tr>
                </table>
                <!-- pmsLstType=3-->
                <table class="table table-condensed table-hover" ng-if="x.pmsLstType==3">
                    <tr>
                        <th></th>
                        <th>Employee ID</th>
                        <th>Employee Name</th>
                        <th>Department</th>
                        <th>Position</th>
                    </tr>
                    <tr data-ng-repeat="xx in x.pmsEmployeeDtl  | filter:search:strict">
                        <td>
                            <a class="pointer" data-ng-show="hasOpen(xx)" data-ng-click="onClose(xx.empId)">Open</a>
                            <span data-ng-show="!hasOpen(xx)">N/A</span>
                        </td>
                        <td>{{xx.empId}}</td>
                        <td>{{xx.empName}}</td>
                        <td>{{xx.department}}</td>
                        <td>{{xx.position}}</td>
                    </tr>
                </table>
            </div>


        </div>
    </div>
</section>


<!-- modal view for applicant remove prompt-->
<div id="modal-panel-paflist" class="popup-basic  popup-lg bg-none mfp-with-anim mfp-hide">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Paf List</span>
        </div>
        <div class="panel-body">
            <p class="text-danger">{{stopnote}}</p>
            <table class="table table-condensed table-hover">
                <tr>
                    <th></th>
                    <th>Paf ID</th>
                    <th>Created Date</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
                <tr data-ng-repeat="x in paflist | filter:{status:'O'}">
                    <td><a class="pointer" ng-click="viewForClosePaf(x.employeeId, x.hashcode)">View Paf</a></td>
                    <td>{{x.pafId}}</td>
                    <td>{{x.pmsperiodfrom | date:'MM/dd/yyyy'}}&nbsp;to&nbsp;{{x.pmsperiodto | date:'MM/dd/yyyy'}}</td>
                    <td>{{x.dateappraisal | date:'MM/dd/yyyy'}}</td>
                    <td>{{x.status=='O'? 'OPEN':'ClOSE'}}</td>
                </tr>
            </table>
        </div>
        <div class="panel-footer text-right">
            <button class="btn" data-ng-click="closeModalForm()">Cancel</button>
        </div>
    </div>
</div>



