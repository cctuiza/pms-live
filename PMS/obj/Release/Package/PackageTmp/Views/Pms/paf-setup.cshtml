        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>&nbsp; Select Previous Appraisal</span>
        </div>
        <div class="panel-body">

            <accordion>
                <accordion-group ng-repeat="xx in mainIndicator">
