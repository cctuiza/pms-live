                            <th>

                                <span class="glyphicon glyphicon-check" ng-click="onCheckAll(xx.kpi)"></span>
                            </th>
                            <th>
                                KPI
                            </th>
                            <th>
                                Target
                            </th>
                        </tr>
                        <tr ng-repeat="xxx in xx.kpi">
                            <td>
                                <input type="checkbox" ng-model="xxx.selected" />
                            </td>
